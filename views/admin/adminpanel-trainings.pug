extends ../layout

block content
    .adminpanel-container
        .admin-sidebar
            ul
                li: a(href="/adminpanel/") Головна
                li: a(href="/adminpanel/adminpanel-trainings") Тренування
                li: a(href="/adminpanel/adminpanel-users") Користувачі
                li: a(href="/adminpanel/adminpanel-trainers") Тренери
                li: a(href="/adminpanel/adminpanel-programs") Програми
                li: a(href="/adminpanel/adminpanel-memberships") Абонементи

        .adminpanel-content
            h1 Тренування
            a(href="/trainings/create" class="btn btn-primary") + Додати тренування

            table
                thead
                    tr
                        th Дата
                        th Час
                        th Програма
                        th Тренер
                        th Кількість
                        th Статус
                        th Дії
                tbody
                    each training in trainings
                        tr
                            td= training.date
                            td= training.time
                            td= training.program_name
                            td= training.trainer_name
                            td= training.quantity
                            td= training.status
                            td
                                .actions
                                    a(href=`/trainings/edit/${training.id_training}`) Редагувати
                                    button(data-id=training.id_training class="delete-training-btn") Видалити
